// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  role     String   // 'admin' | 'user'
  password String?
  isPro    Boolean  @default(false)
  results  Result[]
}

model Question {
  id            String  @id @default(cuid())
  category      String  // 'A2' | 'B1' | 'C1'
  text          String
  options       Json    // Array of strings
  correctAnswer Int
}

model Result {
  id             String   @id @default(cuid())
  userId         String
  userName       String
  category       String
  date           DateTime @default(now())
  score          Int
  totalQuestions Int
  failedQuestions Json    // Array of { questionId: string, userAnswer: number }
  
  user           User     @relation(fields: [userId], references: [id])
}
