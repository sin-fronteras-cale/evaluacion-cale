// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  role     String   // 'admin' | 'user'
  password String?
  phone       String?
  idType      String?
  idNumber    String?
  city        String?
  department  String?
  policyAcceptedAt DateTime?
  isPro        Boolean   @default(false)
  proExpiresAt DateTime?
  companyTag   String?   // e.g., 'supertaxis'
  results      Result[]
  payments     Payment[]
  passwordResetTokens PasswordResetToken[]
}

model Question {
  id            String  @id @default(cuid())
  category      String  // 'A2' | 'B1' | 'C1' or evaluation ID
  text          String
  options       Json    // Array of strings
  correctAnswer Int

  evaluationId  String?
  evaluation    Evaluation? @relation(fields: [evaluationId], references: [id], onDelete: Cascade)
}

model Result {
  id             String   @id @default(cuid())
  userId         String
  userName       String
  category       String
  date           DateTime @default(now())
  score          Int
  totalQuestions Int
  failedQuestions Json    // Array of { questionId: string, userAnswer: number }
  
  evaluationId   String?
  evaluation     Evaluation? @relation(fields: [evaluationId], references: [id], onDelete: SetNull)
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Evaluation {
  id              String      @id @default(cuid())
  name            String
  description     String?
  durationMinutes Int         @default(60)
  questionCount   Int         @default(40)
  isActive        Boolean     @default(true)
  companyTag      String?     // e.g., 'supertaxis'
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  questions       Question[]
  results         Result[]
}

model Payment {
  id                String   @id @default(cuid())
  transactionId     String   @unique
  reference         String
  status            String
  amountInCents     Int
  currency          String
  paymentMethodType String?
  customerEmail     String?
  userId            String?
  userName          String?
  createdAt         DateTime @default(now())
  raw               Json

  user              User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model AppSetting {
  key       String   @id
  valueInt  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
